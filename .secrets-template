# Follow this template to create a .secrets file

db:DATABASE_SECRET_KEY
redirect_uri:REDIRECT_URI # URI that the login should redirect to
hosts:TRUSTED_HOSTS # Comma seperated list of host domains the app trusts to redirect to (eg. domain.tld,127.0.0.1:1234,localhost:1234)
port:PORT # Port that the app is served on
threads:THREADS # # of threads for the app to run on
mail-username:MAIL_SERVER_USERNAME
mail-password:MAIL_SERVER_PASSWORD
mail-server:MAIL_SERVER_URI # URI to the mail server
mail-address:MAIL_ADDRESS # Email address that will send the mail
admin-password:ADMIN_PASSWORD_HASH # To get the hash install the requirements.txt and run python3 -c "print(__import__('werkzeug').security.generate_password_hash('YOUR_PASSWORD_HERE'))"
tenant_id:TENANT_ID # For Microsoft login
client_id:CLIENT_ID # For Microsoft login
client_secret:CLIENT_SECRET # For Microsoft login
DEBUG:LEVEL # Level 0 - 2
FORM_VALIDATION_OFF: # Turn form validation off (for debugging) values: 1 | 0
